<Window x:Class="POEWPF_Programming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POEWPF_Programming"
        mc:Ignorable="d"
        Title="Cybersecurity Chatbot, Task Manager"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="MediumPurple">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="3*"/>
            <!-- Chatbot -->
            <RowDefinition Height="2*"/>
            <!-- Task Manager -->
            <RowDefinition Height="2*"/>
            <!-- ASCII Art & Activity Log -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Cybersecurity Awareness Chatbot"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Chatbot -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChatPanel" Margin="10"/>
            </ScrollViewer>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <TextBox x:Name="UserInputTextBox"
                         Width="700" Height="30"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"
                         ToolTip="Type your question here"/>
                <Button Content="Send"
                        Width="80" Height="30"
                        Click="SendButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Task Manager -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Task Manager"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="TitleTextBox"
                         Width="200" Height="30"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"
                         ToolTip="Task Title"/>
                <TextBox x:Name="DescriptionTextBox"
                         Width="300" Height="30"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"
                         ToolTip="Task Description"/>
                <TextBox x:Name="ReminderTextBox"
                         Width="200" Height="30"
                         VerticalContentAlignment="Center"
                         Margin="0,0,10,0"
                         ToolTip="Reminder (yyyy-MM-dd HH:mm)"/>
                <Button Content="Add Task"
                        Width="100" Height="30"
                        Click="AddTaskButton_Click"/>
            </StackPanel>

            <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="TasksPanel"/>
            </ScrollViewer>
        </StackPanel>

        <!-- ASCII Art & Activity Log -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- ASCII Art Display -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="ASCII Art"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <TextBox x:Name="AsciiArtBox"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="NoWrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         Height="180"
                         Background="Black"
                         Foreground="LightGreen"/>
            </StackPanel>

            <!-- Activity Log -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Activity Log"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>
                <TextBox x:Name="ActivityLogTextBox"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         Height="180"
                         Background="White"
                         Foreground="Black"/>

                <Button Content="Take Quiz"
        Width="100"
        Height="30"
        Margin="10"
        Click="TakeQuizButton_Click"/>


            </StackPanel>
        </Grid>
    </Grid>
</Window>
